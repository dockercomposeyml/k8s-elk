#=========================== Filebeat inputs =============================

filebeat.inputs:
- type: {{ input_type }}
  paths:
  - /var/log/*.log
  
  #exclude_lines: {{ exclude_lines }}
  #include_lines: {{ include_lines }}
  #exclude_files: {{ exclude_files }}
  #fields:
  #  level: debug
  #  review: 1


  ### Multiline options
  #multiline.pattern: ^\[
  #multiline.negate: false
  #multiline.match: after
 
#============================= Filebeat modules ===============================
filebeat.config.modules:
  path: ${path.config}/modules.d/*.yml
  reload.enabled: {{ reload_enabled }}
  {% if reload_enabled %}
  reload.period: {{ reload_period }}
  {% endif %}
  
  
  
#================================ General =====================================
#name:
#tags: ["service-X", "web-tier"]
#fields:
#  env: staging

#--------------------------- Kafka Output -------------------------------------
output.kafka:
  # initial brokers for reading cluster metadata
  hosts:  [ {% for kafka_broker in kafka_broker_hosts %}"{{ kafka_broker }}:{{ kafka_broker_port }}"{{ ',' if not loop.last else '' }}{% endfor %} ]

  topic: '{{ kafka_topic }}'
  partition.round_robin:
    reachable_only: false

  required_acks: 1
  compression: {{ kafka_compression }}
  max_message_bytes: {{ kafka_max_message_bytes }}

#================================ Processors ====================================
processors:
  - add_host_metadata: ~
  - add_cloud_metadata: ~
  - add_docker_metadata: ~
  - add_kubernetes_metadata: ~

